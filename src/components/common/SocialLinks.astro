// Función para detectar la red social a partir de una URL
export function detectNetworkFromUrl(url: string): string {
  if (!url) return 'Web';
  
  try {
    const hostname = new URL(url).hostname.toLowerCase();
    
    if (hostname.includes('github.com')) return 'GitHub';
    if (hostname.includes('linkedin.com')) return 'LinkedIn';
    if (hostname.includes('discord.com') || hostname.includes('discord.gg')) return 'Discord';
    if (hostname.includes('twitter.com') || hostname.includes('x.com')) return 'Twitter';
    if (hostname.includes('facebook.com') || hostname.includes('fb.com')) return 'Facebook';
    if (hostname.includes('instagram.com')) return 'Instagram';
    if (hostname.includes('youtube.com') || hostname.includes('youtu.be')) return 'YouTube';
    
    return 'Web';
  } catch (e) {
    return 'Web';
  }
}

// Obtener el HTML del icono según la red social
export function getIconForUrl(url: string): string {
  const network = detectNetworkFromUrl(url);
  return iconMap[network] || iconMap['Web'];
}

---

<ul class:list={['social-links', `social-links-${variant}`, className]}>
  {profiles.map((profile) => (
    <li>
      <a 
        href={profile.url} 
        target="_blank" 
        rel="noopener noreferrer"
        aria-label={`Perfil de ${profile.network}`}
        title={profile.network}
      >
        <span class="icon-only" set:html={iconMap[profile.network] || iconMap['Web']}></span>
        <span class="print-only">{profile.network}: {profile.url}</span>
        {variant === 'default' && <span class="network-name">{profile.network}</span>}
      </a>
    </li>
  ))}
</ul>

<style>
  .social-links {
    list-style: none;
    display: flex;
    gap: var(--space-md);
    padding: 0;
    margin: var(--space-md) 0;
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--color-primary);
    transition: color var(--transition-fast);
  }
  
  .social-links a:hover {
    color: var(--color-primary-dark);
  }
  
  .social-icon {
    transition: transform 0.2s ease;
  }
  
  .social-links a:hover .social-icon {
    transform: scale(1.1);
  }
  
  .print-only {
    display: none;
  }
  
  @media (max-width: 640px) {
    .network-name {
      display: none;
    }
  }
  
  @media print {
    .social-links {
      display: block;
      margin: var(--space-sm) 0;
    }
    
    .social-links li {
      margin-bottom: var(--space-xs);
    }
    
    .icon-only {
      display: none;
    }
    
    .print-only {
      display: inline;
    }
    
    .network-name {
      display: none;
    }
  }
</style>