---
// src/components/common/SocialLinks.astro
// Importaci√≥n de tipos centralizados
import type { SocialProfile, SocialLinksProps } from '@types';
// Usar la interfaz Props centralizada
export type Props = SocialLinksProps;

const { profiles, variant = 'default', class: className = '' } = Astro.props;


// Mapa de iconos para redes sociales
const iconMap: Record<string, string> = {
  GitHub: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="social-icon"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>`,
  LinkedIn: `<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="social-icon"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>`,
};

---

<ul class:list={['social-links', `social-links-${variant}`, className]}>
  {profiles.map((profile) => (
    <li>
      <a 
        href={profile.url} 
        target="_blank" 
        rel="noopener noreferrer"
        aria-label={`Perfil de ${profile.network}`}
        title={profile.network}
      >
        <span class="icon-only" set:html={iconMap[profile.network] || ''}></span>
        <span class="print-only">{profile.network}: {profile.url}</span>
        {variant === 'default' && <span class="network-name">{profile.network}</span>}
      </a>
    </li>
  ))}
</ul>

<style>
  .social-links {
    list-style: none;
    display: flex;
    gap: var(--space-md);
    padding: 0;
    margin: var(--space-md) 0;
  }
  
  .social-links a {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    text-decoration: none;
    color: var(--color-text);
    transition: color var(--transition-fast);
  }
  
  .social-links a:hover {
    color: var(--color-primary);
  }
  
  .print-only {
    display: none;
  }
  
  @media (max-width: 640px) {
    .network-name {
      display: none;
    }
  }
  
  @media print {
    .social-links {
      display: block;
      margin: var(--space-sm) 0;
    }
    
    .social-links li {
      margin-bottom: var(--space-xs);
    }
    
    .icon-only {
      display: none;
    }
    
    .print-only {
      display: inline;
    }
    
    .network-name {
      display: none;
    }
  }
</style>