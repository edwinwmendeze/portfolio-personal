---
// src/components/profile/ProjectCard.astro
import type { Project } from '@types';
import { getPath } from '@utils/routeUtils';

interface Props {
  project: Project;
  featured?: boolean;
}

const { project, featured = false } = Astro.props;

// Procesamos la URL del proyecto para obtener información adicional
const projectUrl = project.url ? new URL(project.url) : null;
const isGitHub = projectUrl?.hostname === 'github.com';
---

<article class:list={['project-card', { featured }]}>
  <div class="project-header">
    <h3 class="project-title">
      <a href={getPath(project.url)} target="_blank" rel="noopener noreferrer">
        {project.name}
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="external-link-icon">
          <path d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"></path>
          <polyline points="15 3 21 3 21 9"></polyline>
          <line x1="10" y1="14" x2="21" y2="3"></line>
        </svg>
      </a>
    </h3>
    
    {featured && <span class="featured-badge">Destacado</span>}
  </div>
  
  <p class="project-description">{project.description}</p>
  
  {project.highlights && project.highlights.length > 0 && (
    <div class="project-highlights">
      <h4>Aspectos destacados</h4>
      <ul>
        {project.highlights.map(highlight => (
          <li>{highlight}</li>
        ))}
      </ul>
    </div>
  )}
  
  {project.technologies && project.technologies.length > 0 && (
    <div class="project-tech">
      {project.technologies.map(tech => (
        <span class="tech-tag">{tech}</span>
      ))}
    </div>
  )}
  
  {isGitHub && (
    <div class="github-info">
      <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="github-icon">
        <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
      </svg>
      <span>Repositorio en GitHub</span>
    </div>
  )}
</article>

<style>
  .project-card {
    background-color: var(--color-card);
    border-radius: var(--radius-md);
    padding: var(--space-lg);
    border: 1px solid var(--color-border);
    transition: transform var(--transition-fast), box-shadow var(--transition-fast);
    margin-bottom: var(--space-lg);
  }
  
  .project-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.05);
  }
  
  .project-card.featured {
    border-left: 4px solid var(--color-primary);
  }
  
  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-md);
  }
  
  .project-title {
    font-size: var(--text-lg);
    margin: 0;
  }
  
  .project-title a {
    color: var(--color-text);
    text-decoration: none;
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    transition: color var(--transition-fast);
  }
  
  .project-title a:hover {
    color: var(--color-primary);
  }
  
  .external-link-icon {
    opacity: 0.6;
    transition: opacity var(--transition-fast);
  }
  
  .project-title a:hover .external-link-icon {
    opacity: 1;
  }
  
  .featured-badge {
    font-size: var(--text-xs);
    background-color: var(--color-primary);
    color: white;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    font-weight: 500;
  }
  
  .project-description {
    color: var(--color-text-secondary);
    margin-bottom: var(--space-md);
    line-height: 1.6;
  }
  
  .project-highlights {
    margin-bottom: var(--space-md);
  }
  
  .project-highlights h4 {
    font-size: var(--text-sm);
    margin-bottom: var(--space-sm);
    color: var(--color-text);
    font-weight: 500;
  }
  
  .project-highlights ul {
    padding-left: var(--space-lg);
  }
  
  .project-highlights li {
    margin-bottom: var(--space-xs);
    color: var(--color-text-secondary);
  }
  
  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-xs);
    margin-bottom: var(--space-md);
  }
  
  .tech-tag {
    font-size: var(--text-xs);
    background-color: rgba(59, 130, 246, 0.1);
    color: var(--color-primary);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-sm);
    font-weight: 500;
  }
  
  .github-info {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-top: var(--space-md);
  }
  
  .github-icon {
    color: var(--color-text-secondary);
  }
  
  /* Estilos para impresión */
  @media print {
    .project-card {
      background: none;
      border: none;
      border-bottom: 1px solid #eee;
      border-radius: 0;
      padding: var(--space-md) 0;
      page-break-inside: avoid;
    }
    
    .project-card:hover {
      transform: none;
      box-shadow: none;
    }
    
    .project-card.featured {
      border-left: none;
      position: relative;
      padding-left: 0;
    }
    
    .project-card.featured::before {
      content: "★ ";
      color: var(--color-primary);
    }
    
    .featured-badge {
      display: none;
    }
    
    .project-title {
      font-size: 12pt;
    }
    
    .project-description,
    .project-highlights li {
      font-size: 10pt;
    }
    
    .external-link-icon {
      display: none;
    }
    
    .tech-tag {
      background: none;
      border: 1px solid #ddd;
      padding: 1px 4px;
      font-size: 8pt;
    }
    
    .github-info {
      display: none;
    }
  }
  
  /* Responsive */
  @media (max-width: 640px) {
    .project-header {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-sm);
    }
  }
</style>