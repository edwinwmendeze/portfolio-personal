---
// src/components/profile/ProfessionalSummary.astro
import type { Basics } from '@types';
import ErrorBoundary from '../common/ErrorBoundary.astro';
import Card from '../ui/Card.astro';

interface Props {
  summary: string;
  showTitle?: boolean;
}

const { summary, showTitle = true } = Astro.props;
---

<ErrorBoundary>
  {showTitle && <h2 class="component-title">Resumen Profesional</h2>}
  <Card variant="border" class="summary-content">
    <p class="summary-text">{summary}</p>
  </Card>
  <br />
</ErrorBoundary>

<style>
  .summary-content {
    width: 100%;
  }
  
  .summary-text {
    line-height: 1.6;
    color: var(--color-text);
    margin: 0;
  }
  
  @media print {
    .summary-text {
      font-size: 11pt;
    }
  }
</style>
