---
// Profile section with photo and intro
const { data, defaultLang } = Astro.props;
const { basics } = data;
---

<section class="profile-section">
  <div class="profile-photo">
    <img src={basics.image.remote} alt={`Foto de ${basics.name}`} />
  </div>
  
  <div class="profile-info">
    <div data-lang="en" class={defaultLang === 'es' ? 'hidden' : ''}>
      <h1 class="profile-name">{basics.name} {basics.last_name}</h1>
      <h2 class="profile-title">{basics.occupation}</h2>
      <p class="profile-description">
        {basics.summary}
      </p>
    </div>
    
    <div data-lang="es" class={defaultLang === 'en' ? 'hidden' : ''}>
      <h1 class="profile-name">{basics.name} {basics.last_name}</h1>
      <h2 class="profile-title">{basics.occupation}</h2>
      <p class="profile-description">
        {basics.summary}
      </p>
    </div>
  </div>
</section>

<style>
  .profile-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 2rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e2e8f0;
  }
  
  .profile-photo {
    width: 140px;
    height: 140px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    border: 4px solid white;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  
  .profile-photo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    position: absolute;
    top: 0;
    left: 0;
  }
  
  .profile-name {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 0.5rem;
    color: #2d3748;
  }
  
  .profile-title {
    font-size: 1.25rem;
    font-weight: 500;
    color: #38b2ac;
    margin: 0 0 1rem;
  }
  
  .profile-description {
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.5;
    color: #4a5568;
    font-size: 0.95rem;
  }

  .hidden {
    display: none;
  }
  
  /* Soporte para tema oscuro */
  :global(.dark) .profile-section {
    border-bottom: 1px solid #4a5568;
  }
  
  :global(.dark) .profile-photo {
    border-color: #2d3748;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }
  
  :global(.dark) .profile-name {
    color: #e2e8f0;
  }
  
  :global(.dark) .profile-description {
    color: #a0aec0;
  }
  
  @media (min-width: 768px) {
    .profile-section {
      flex-direction: row;
      text-align: left;
      gap: 2rem;
    }
    
    .profile-photo {
      margin-bottom: 0;
    }
    
    .profile-description {
      margin: 0;
    }
  }
</style> 