---
// Language switcher component
const { activeLang = 'es' } = Astro.props;

// Mostrar el botón opuesto al idioma actual para facilitar el cambio
const showLang = activeLang === 'es' ? 'en' : 'es';
const buttonText = showLang === 'en' ? 'English' : 'Español';
---

<div class="language-switcher">
  <button class="lang-button" data-lang={showLang}>
    {buttonText}
  </button>
</div>

<style>
  .language-switcher {
    display: flex;
    justify-content: flex-end;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
    font-family: 'JetBrains Mono', monospace;
  }
  
  .lang-button {
    background-color: #38b2ac;
    color: white;
    border: 1px solid #38b2ac;
    padding: 0.5rem 1rem;
    border-radius: 4px;
    cursor: pointer;
    font-size: 0.875rem;
    transition: all 0.2s ease;
    font-family: inherit;
  }
  
  .lang-button:hover {
    background-color: #319795;
  }
</style> 